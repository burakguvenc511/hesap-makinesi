<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/xxhdpi_text_margin_boslugu"
            android:background="@drawable/text_background"
            android:textAlignment="textEnd"
            android:textColor="@color/button_color"
            android:textSize="@dimen/xxhdpi_text_size" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/xxhdpi_button_margin_boslugu"
            android:gravity="bottom"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:textAlignment="textEnd"
                android:textColor="@color/button_color"
                android:textSize="@dimen/xxhdpi_text_size" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/xxhdpi_margin_boslugu"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/buttonC"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/xxhdpi_button_margin_boslugu"
                    android:layout_weight="1"
                    android:background="@drawable/button_background"
                    android:text="C"
                    android:textColor="@color/button_color"
                    android:textSize="@dimen/xxhdpi_button_text_size" />

                <Button
                    android:id="@+id/buttonsil"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/xxhdpi_button_margin_boslugu"
                    android:layout_weight="1"
                    android:background="@drawable/button_background"
                    android:text="←"
                    android:textColor="@color/button_color"
                    android:textSize="@dimen/xxhdpi_button_text_size"
                    android:textStyle="bold" />

                <!-- Sağ Parantez (")") Butonu -->
                <Button
                    android:id="@+id/buttonus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/xxhdpi_button_margin_boslugu"
                    android:layout_weight="1"
                    android:background="@drawable/button_background"
                    android:text="^"
                    android:textColor="@color/button_color"
                    android:textSize="@dimen/xxhdpi_button_text_size" />

                <Button
                    android:id="@+id/buttonbol"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/xxhdpi_button_margin_boslugu"
                    android:layout_weight="1"
                    android:background="@drawable/button_background"
                    android:text="/"
                    android:textColor="@color/button_color"
                    android:textSize="@dimen/xxhdpi_button_text_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/xxhdpi_margin_boslugu"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/xxhdpi_button_margin_boslugu"
                    android:layout_weight="1"
                    android:background="@drawable/button_background"
                    android:text="7"
                    android:textColor="@color/button_color"
                    android:textSize="@dimen/xxhdpi_button_text_size" />

                <Button
                    android:id="@+id/button8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/xxhdpi_button_margin_boslugu"
                    android:layout_weight="1"
                    android:background="@drawable/button_background"
                    android:text="8"
                    android:textColor="@color/button_color"
                    android:textSize="@dimen/xxhdpi_button_text_size" />

                <Button
                    android:id="@+id/button9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/xxhdpi_button_margin_boslugu"
                    android:layout_weight="1"
                    android:background="@drawable/button_background"
                    android:text="9"
                    android:textColor="@color/button_color"
                    android:textSize="@dimen/xxhdpi_button_text_size" />

                <Button
                    android:id="@+id/buttoncarp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/xxhdpi_button_margin_boslugu"
                    android:layout_weight="1"
                    android:background="@drawable/button_background"
                    android:text="x"
                    android:textColor="@color/button_color"
                    android:textSize="@dimen/xxhdpi_button_text_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/xxhdpi_margin_boslugu"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/xxhdpi_button_margin_boslugu"
                    android:layout_weight="1"
                    android:background="@drawable/button_background"
                    android:text="4"
                    android:textColor="@color/button_color"
                    android:textSize="@dimen/xxhdpi_button_text_size" />

                <Button
                    android:id="@+id/button5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/xxhdpi_button_margin_boslugu"
                    android:layout_weight="1"
                    android:background="@drawable/button_background"
                    android:text="5"
                    android:textColor="@color/button_color"
                    android:textSize="@dimen/xxhdpi_button_text_size" />

                <Button
                    android:id="@+id/button6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/xxhdpi_button_margin_boslugu"
                    android:layout_weight="1"
                    android:background="@drawable/button_background"
                    android:text="6"
                    android:textColor="@color/button_color"
                    android:textSize="@dimen/xxhdpi_button_text_size" />

                <Button
                    android:id="@+id/buttoncikar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/xxhdpi_button_margin_boslugu"
                    android:layout_weight="1"
                    android:background="@drawable/button_background"
                    android:text="-"
                    android:textColor="@color/button_color"
                    android:textSize="@dimen/xxhdpi_button_text_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/xxhdpi_margin_boslugu"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/xxhdpi_button_margin_boslugu"
                    android:layout_weight="1"
                    android:background="@drawable/button_background"
                    android:onClick="sayilar"
                    android:text="1"
                    android:textColor="@color/button_color"
                    android:textSize="@dimen/xxhdpi_button_text_size" />

                <Button
                    android:id="@+id/button2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/xxhdpi_button_margin_boslugu"
                    android:layout_weight="1"
                    android:background="@drawable/button_background"
                    android:text="2"
                    android:textColor="@color/button_color"
                    android:textSize="@dimen/xxhdpi_button_text_size" />

                <Button
                    android:id="@+id/button3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/xxhdpi_button_margin_boslugu"
                    android:layout_weight="1"
                    android:background="@drawable/button_background"
                    android:text="3"
                    android:textColor="@color/button_color"
                    android:textSize="@dimen/xxhdpi_button_text_size" />

                <Button
                    android:id="@+id/buttonToplam"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/xxhdpi_button_margin_boslugu"
                    android:layout_weight="1"
                    android:background="@drawable/button_background"
                    android:text="+"
                    android:textColor="@color/button_color"
                    android:textSize="@dimen/xxhdpi_button_text_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/xxhdpi_margin_boslugu"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button00"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/xxhdpi_button_margin_boslugu"
                    android:layout_weight="1"
                    android:background="@drawable/button_background"
                    android:text="00"
                    android:textColor="@color/button_color"
                    android:textSize="@dimen/xxhdpi_button_text_size" />

                <Button
                    android:id="@+id/button0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/xxhdpi_button_margin_boslugu"
                    android:layout_weight="1"
                    android:background="@drawable/button_background"
                    android:text="0"
                    android:textColor="@color/button_color"
                    android:textSize="@dimen/xxhdpi_button_text_size" />

                <Button
                    android:id="@+id/buttonNokta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/xxhdpi_button_margin_boslugu"
                    android:layout_weight="1"
                    android:background="@drawable/button_background"
                    android:text="."
                    android:textColor="@color/button_color"
                    android:textSize="@dimen/xxhdpi_button_text_size" />

                <Button
                    android:id="@+id/buttonesittr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/xxhdpi_button_margin_boslugu"
                    android:layout_weight="1"
                    android:background="@drawable/button_background"
                    android:text="="
                    android:textColor="@color/button_color"
                    android:textSize="@dimen/xxhdpi_button_text_size" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>